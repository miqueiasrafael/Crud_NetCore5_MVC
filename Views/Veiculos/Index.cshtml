@model IEnumerable<AppOficial.Models.Veiculo>

@{
    ViewData["Title"] = "Gerenciamento de Veículos";
}



<h2>Gerenciamento de Veículos</h2>

<div class="row mt-4 mb-4">
    <div class="col">
        <a class="btn btn-sm btn-primary create"><i class="fas fa-plus-circle"></i> Adicionar veículo</a>
    </div>
</div>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@


<div class="row">
    <div class="col">

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Modelo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AnoFabricacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AnoModelo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Foto)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">
                            <a class="btn btn-info btn-sm edit" data-id="@item.Id"><i class="fas fa-pen-alt"></i></a>
                            <a class="btn btn-primary btn-sm details" data-id="@item.Id"><i class="fas fa-plus-circle"></i></a>
                            <a data-title="Exclusão" class="btn btn-danger btn-sm btn-delete delete" data-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                        </th>
                        <td>@Html.DisplayFor(modelItem => item.Modelo) </td>
                        <td>@Html.DisplayFor(modelItem => item.AnoFabricacao)</td>
                        <td>@Html.DisplayFor(modelItem => item.AnoModelo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Foto)</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>





<div id="modal" class="modal fade" />

@section scripts {
    @*<script src="~/js/Usuario/ConsultarUsuario.js" asp-append-version="true"></script>*@
    <script>
        $(function () {
            $(".details").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("Veiculos/Details?id=" + id, function () {
                    $("#modal").modal();
                })
            });

            $(".edit").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("Veiculos/Edit?id=" + id, function () {
                    $("#modal").modal();
                })
            });

            $(".delete").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("Veiculos/Delete?id=" + id, function () {
                    $("#modal").modal();
                })
            });

            $(".create").click(function () {
                $("#modal").load("Veiculos/Create", function () {
                    $("#modal").modal();
                })
            });

        })
    </script>
}
